<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_detail_post"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="@dimen/size_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/side_nav_bar"
        android:contentDescription="@string/post_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/author_post_detail"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_marginEnd="8dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        android:layout_marginBottom="8dp"
        android:padding="@dimen/size_4"
        android:src="@drawable/ic_account"
        app:layout_constraintBottom_toBottomOf="@+id/image_detail_post"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/profile_picture" />

    <TextView
        android:id="@+id/title_post_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:hint="@string/post_title"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_detail_post" />

    <TextView
        android:id="@+id/desc_post_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/post_description"
        android:padding="@dimen/size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_post_detail" />



</androidx.constraintlayout.widget.ConstraintLayout>